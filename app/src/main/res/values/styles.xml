<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="layout_properties">
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="btn_properties">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:fontFamily">@font/daonb</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/btndesign</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="btn_properties_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:fontFamily">@font/daonb</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/btndesign</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="btn_mid" parent="btn_properties">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_slarge" parent="btn_properties">
        <item name="android:background">@drawable/btndesignx1</item>
    </style>

    <style name="btn_large" parent="btn_properties">
        <item name="android:background">@drawable/btndesignx2</item>
    </style>

    <style name="btn_xlarge" parent="btn_properties">
        <item name="android:background">@drawable/btndesignx3</item>
    </style>

    <style name="btn_mid_tab" parent="btn_properties_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="btn_slarge_tab" parent="btn_properties_tab">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btndesignx1</item>
    </style>
    <style name="btn_large_tab" parent="btn_properties_tab">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btndesignx2</item>
    </style>

    <style name="btn_xlarge_tab" parent="btn_properties">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btndesignx3</item>
    </style>

    <style name="mainIcon">
        <item name="android:background">@drawable/mainicondesign</item>
    </style>



    <style name="triggerButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="largeBtn">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="smallBtn">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="crossKey">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="backbutton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/backbutton</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
