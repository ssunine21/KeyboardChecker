<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <ImageButton
        android:id="@+id/controllerBackButton"
        style="@style/backbutton" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/controller_main"
            android:layout_width="490dp"
            android:layout_height="320dp"
            android:layout_below="@+id/trigger"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/LoadFail"

                android:scaleType="fitCenter"
                android:src="@drawable/controller_main" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/trigger"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/controller_LB"
                style="@style/triggerButton"
                android:layout_width="50dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/controller_lb" />

            <ImageView
                android:id="@+id/controller_LT"
                style="@style/triggerButton"
                android:layout_marginEnd="100dp"
                android:src="@drawable/controller_lt" />

            <ImageView
                android:id="@+id/controller_RT"
                style="@style/triggerButton"
                android:layout_marginEnd="20dp"
                android:src="@drawable/controller_rt" />

            <ImageView
                android:id="@+id/controller_RB"
                style="@style/triggerButton"
                android:layout_width="50dp"
                android:src="@drawable/controller_rb" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trigger"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/controller_LS"
                style="@style/largeBtn"
                android:layout_weight="1"
                android:paddingEnd="30dp"
                android:src="@drawable/controller_ls" />

            <ImageView
                android:id="@+id/controller_menuL"
                style="@style/smallBtn"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/controller_menu" />

            <ImageView
                android:id="@+id/controller_menuR"
                style="@style/smallBtn"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingEnd="15dp"
                android:src="@drawable/controller_start" />

            <RelativeLayout
                android:id="@+id/roundButton"
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/controller_A"
                    style="@style/smallBtn"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/controller_a" />

                <ImageView
                    android:id="@+id/controller_B"
                    style="@style/smallBtn"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/controller_b" />

                <ImageView
                    android:id="@+id/controller_X"
                    style="@style/smallBtn"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/controller_x" />

                <ImageView
                    android:id="@+id/controller_Y"
                    style="@style/smallBtn"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/controller_y" />

            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middleButton"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/controller_down"
                    style="@style/crossKey"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/controller_down" />

                <ImageView
                    android:id="@+id/controller_right"
                    style="@style/crossKey"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/controller_right" />

                <ImageView
                    android:id="@+id/controller_left"
                    style="@style/crossKey"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/controller_left" />

                <ImageView
                    android:id="@+id/controller_up"
                    style="@style/crossKey"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/controller_up" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/controller_RS"
                style="@style/largeBtn"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/controller_rs" />

        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerTestAds"></com.google.android.gms.ads.AdView>
</RelativeLayout>
